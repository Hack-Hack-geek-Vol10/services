FROM golang:1.21.4 AS builder
WORKDIR /app/sql-service

COPY . .

RUN go build -o sql-service ./cmd/app/main.go

FROM ubuntu AS runner
WORKDIR /app/sql-service
COPY --from=builder /app/sql-service/sql-service /app/sql-service/sql-service

ENV SERVER_ADDR=8087
ENV PSQL_HOST=
ENV PSQL_PORT=
ENV PSQL_USER=
ENV PSQL_PASSWORD=
ENV PSQL_DBNAME=
ENV PSQL_SSLMODE=
ENV PSQL_CONNECT_TIMEOUT=
ENV PSQL_CONNECT_WAIT_TIME=
ENV PSQL_CONNECT_ATTEMPTS=
ENV PSQL_CONNECT_BLOCKS=
ENV PSQL_CLOSE_TIMEOUT=

ENV NEW_RELIC_LICENSE_KEY=
ENV NEW_RELIC_APP_NAME=
ENV NEW_RELIC_CODE_LEVEL_METRICS_ENABLED=
ENV NEW_RELIC_DISTRIBUTED_TRACING_ENABLED=
ENV NEW_RELIC_PROCESS_HOST_DISPLAY_NAME=
ENV NEW_RELIC_LABELS=


EXPOSE ${SERVER_ADDR}

CMD ["./sql-service"]